<%= form_with(model: shikigami, local: true, class: 'form-horizontal') do |form| %>
  <% if shikigami.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shikigami.errors.count, "error") %> prohibited this shikigami from being saved:</h2>

      <ul>
      <% shikigami.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: 'col-md-5 title' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label '碎片等级', class: 'col-md-5 title' %>
    <%= form.select :level, Shikigami.levels.collect { |key, _| [key, key] }, {},{ class: 'form-control' }  %>
  </div>

  <div class="form-group">
    <%= form.label '限定', class: 'col-md-1 title' %>
    <%= form.check_box :limited, 'data-toggle': "toggle", 'data-style': "ios" %>
  </div>

  <div class="form-group">
    <%= form.label '记录碎片', class: 'col-md-1 title' %>
    <%= form.check_box :show, 'data-toggle': "toggle", 'data-style': "ios" %>
  </div>

  <div class="form-group">
    <%= form.submit '保存', class: 'btn btn-primary'  %>
    <%= link_to '返回', shikigamis_path, class: 'btn btn-info'%>
  </div>
<% end %>
